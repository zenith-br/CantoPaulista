<!DOCTYPE html>
<html>
    <head>
        <title>Restaurante Canto Paulista</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>
    </head>
    <body>

        <%  unless params[:controller].to_s == "home" %>
          <div class="logo-box">
              <div class="container">
                  <div class="logo-container">
                      <%= image_tag("Canto_Paulista_Logo.png", size:"320x62") %>
                  </div>
              </div>
          </div>
        <%  end %>

        <header>
            <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container">

                    <div class="collapse navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li id="li_main_menu_home"><%= link_to "Home", "/" %></li>
                            <li id="li_main_menu_cardapio"><%= link_to "Cardápio", "cardapio" %></li>
                            <li id="li_main_menu_sobre"><%= link_to "Sobre", "sobre" %></li>
                            <li id="li_main_menu_contato"><%= link_to "Contato", "contato" %></li>
                        </ul>
                    </div>
                </div>
            </div>
        </header>

        <%= yield %>

        <div class="footer">
            <div class="container">
                <div class="site-template">
                    <div class="row">
                        <div class="col-12 col-sm12 col-lg-12 text-center">
                            <br/>
                            <p>&copy; Restaurante Canto Paulista - Todos os direitos reservados<br/>
                                Rua Pamplona 956 - Jardim Paulista - São Paulo / SP&nbsp;&nbsp;
                                <span class="glyphicon glyphicon-phone-alt"></span>&nbsp;&nbsp;(11) 3251-5262<br/>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>

